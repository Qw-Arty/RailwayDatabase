<Window x:Class="railwayDatabase.Windows.PlaceWindow1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:railwayDatabase.Windows"
        mc:Ignorable="d"
        Title="PlaceWindow1" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.05*"/>
            <ColumnDefinition Width="0.6*"/>
            <ColumnDefinition Width="0.05*"/>
            <ColumnDefinition Width="0.6*"/>
            <ColumnDefinition Width="0.05*"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="0.05*"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="0.05*"/>
            <ColumnDefinition Width="0.6*"/>
            <ColumnDefinition Width="0.05*"/>
            <ColumnDefinition Width="0.6*"/>
            <ColumnDefinition Width="0.05*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.05*"/>
            <RowDefinition Height="0.2*"/>
            <RowDefinition Height="0.05*"/>
            <RowDefinition/>
            <RowDefinition Height="0.05*"/>
            <RowDefinition Height="0.12*"/>
            <RowDefinition Height="0.02*"/>
            <RowDefinition Height="0.12*"/>
            <RowDefinition Height="0.05*"/>
        </Grid.RowDefinitions>
        <Button Name="DeleteButton" Content="Удалить" Grid.Column="1" Grid.Row="1" Click="DeleteButton_Click"/>
        <Button Name="BackButton" Content="Назад" Grid.Column="11" Grid.Row="1" Click="BackButton_Click"/>
        <Button Name="CahngeButton" Content="Редактировать/" Grid.Column="1" Grid.Row="5" Click="CahngeButton_Click"/>
        <Button Name="CreateButton" Content="/Создать" Grid.Column="1" Grid.Row="7" Margin="0,0.2" Click="CreateButton_Click"/>
        <ComboBox Name="RailwayCarriageIdBox" DisplayMemberPath="RailwayCarriageId" Grid.Column="3" Grid.Row="5" Grid.RowSpan="3"/>
        <TextBox Name="PlaceLocationBox" Grid.Column="5" Grid.Row="5" Grid.RowSpan="3" TextWrapping="Wrap"/>
        <TextBox Name="PlaceTypeBox" Grid.Column="7" Grid.Row="5" Grid.RowSpan="3" TextWrapping="Wrap"/>
        <TextBox Name="PlacePriceBox" Grid.Column="9" Grid.Row="5" Grid.RowSpan="3" TextWrapping="Wrap"/>
        <DataGrid Name="PlaceGrid" SelectionChanged="PlaceGrid_SelectionChanged"  AutoGenerateColumns="False" Grid.ColumnSpan="11" Grid.Column="1" Grid.Row="3">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding PlaceId}" Width="0.1*"></DataGridTextColumn>
                <DataGridTextColumn Header="Номер вагона" Binding="{Binding RailwayCarriageId}" Width="0.1*"></DataGridTextColumn>
                <DataGridTextColumn Header="Расположение места" Binding="{Binding PlaceLocation}" Width="0.17*"></DataGridTextColumn>
                <DataGridTextColumn Header="Тип места" Binding="{Binding PlaceType}" Width="0.17*"></DataGridTextColumn>
                <DataGridTextColumn Header="Стоимость места" Binding="{Binding PlacePrice}" Width="0.1*"></DataGridTextColumn>
                <DataGridTextColumn Header="Занятость места" Binding="{Binding PlaceAvail}" Width="0.1*"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
        <TextBox Name="PlaceAvailBox" Grid.Column="11" Grid.Row="5" Grid.RowSpan="3" TextWrapping="Wrap"/>
        <TextBlock Grid.Column="3" Grid.Row="1" TextWrapping="Wrap" Text="Окно создания, редактирования и удаления мест" Grid.ColumnSpan="7"/>
    </Grid>
</Window>
